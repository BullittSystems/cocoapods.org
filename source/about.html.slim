ruby:
  team = data.dev_team
  subprojects = [
    { "CocoaPods" => data.contributors_cocoapods },
    { "CocoaPods-Core" => data.contributors_core },
    { "Xcodeproj" => data.contributors_xcodeproj },
    { "CLAide" => data.contributors_claide },
  ]

css:

  .dev-team {
    margin:16px 0;
    text-align:center
  }
  
  .card {
    background-color:white;
    padding:16px;
    position:relative;
  }
  
  .dev-team .card {
      padding-top:200px;
  }
    
  .card .background {
    background-color:grey;
    background-size:cover;
    background-position: center;
    width:100%;
    height:160px;
    position:absolute;
    top:0;
    left:0px;
  }
  
  .card img.twitter_avatar {
    top:84px;
    width:128px;
    height:128px;
    position:absolute;
    left:50%;
    margin-left:-64px;
    border-radius: 10%;
    -moz-border-radius: 10%;
    -webkit-border-radius: 10%;
  }
  
  
  .sub-project {
    position:relative;
    margin:16px 0;
  }  

  .sub-project:hover h2 {
    opacity:0;
  }
  
  .sub-project ul {  
    margin-left:0;  
    padding-left:0;
  }
  
  .sub-project li {  
    list-style-type:none;  
    padding-left:0;
  }  
  
  .sub-project h2 {
    position:absolute;
    top:0;
    bottom:0;
    left:0;
    right:0;
    margin:auto;
  
    text-align:center;
    height:30%;
    font-size:4em;
    color:white;
  
    -webkit-transition:opacity 0.3s ease-in-out;
    -moz-transition:opacity 0.3s ease-in-out;
    -o-transition:opacity 0.3s ease-in-out;
    transition:opacity 0.3s ease-in-out;

  }

section.container
  article.row
    col-lg-12.col-sm-12.col-xs-12
      h1 About CocoaPods

#content-wrapper
  section.container
    article.row
      - for dev in team do
      
        - if team.index(dev) % 2 == 0
          .clearfix.visible-xs
      
        - if team.index(dev) % 3 == 0
          .clearfix.hidden-xs
      
        col-lg-4.col-sm-4.col-xs-6.dev-team
          .card 
            .background style="background-image:url(#{dev.twitter_banner_url})"
            img.twitter_avatar src=dev.twitter_profile_url
            h2 = dev.name
            p = dev.cocoapods_bio
        
        
    article.row
      
      h2 CocoaPods is multiple projects
    
      - for project in subprojects do
        - if subprojects.index(project) % 2 == 0
          .clearfix

        col-lg-6.col-sm-6.col-xs-12.sub-project
          .card  

            ul
              - for contributor in project.values[0] do
                li style="float:left;" 
                  img src="http://www.gravatar.com/avatar/#{contributor.gravatar_id}?s=48" width="48" height="48" alt=contributor.name
            h2 = project.keys[0]
            
            .clearfix
